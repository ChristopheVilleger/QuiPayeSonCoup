<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Qui paye son coup : {% endblock %}</title>
        {% block stylesheets %}
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
            <link href="{{ asset('public/css/style.css') }}" rel="stylesheet"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <div class="containe-fluid">

                <div id="header-logo">
                    <h1>Qui Paye Son Coup ?</h1>
                </div>
                <nav>
                    <div class="row">
                        <div class="col-md-12">
                            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                <div class="important">
                                    Bonjour {{ app.user }}
                                        <a href="{{ path("fos_user_security_logout") }}">
                                            <span id="logout" class="glyphicon glyphicon-off"></span>
                                        </a>

                                </div>
                            {% else %}
                                <a href="{{ path("fos_user_security_login") }}">
                                    <span id="login" class="glyphicon glyphicon-off"></span>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </nav>

            <body>
                {% block body %}{% endblock %}
                {% block javascripts %}
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
                    <script src="{{ asset('public/web/js/main.js') }}"></script>
                {% endblock %}
            </body>

            <hr>

            <footer>
                Copyright Qui Paye Son Coup {{ "now"|date("Y") }}
            </footer>
    </div>
</html>
