{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-xs-8">
            {{ form_start(form) }}
            {{ form_label(form.email, "Email") }}
            {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.email) }}

            {{ form_label(form.username, "Identifiant") }}
            {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.username) }}

            {{ form_label(form.plainPassword.first, "Mot de passe") }}
            {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.plainPassword.first) }}

            {{ form_label(form.plainPassword.second, "Re-saisissez le mot de passe") }}
            {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.plainPassword.second) }}

            {{ form_rest(form) }}
            {{ form_end(form) }}


        </div>
    </div>

    <br>

    <button type="submit" class="btn btn-success">S'enregistrer</button>
    
    <p>Vous êtes déjà inscrit ? <a href="{{ path("fos_user_security_login") }}">Cliquez ici</a>.</p>

{% endblock body %}
