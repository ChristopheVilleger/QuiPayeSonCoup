{% extends "::base.html.twig" %}

{% block body %}
       {{ form_start(form) }}
            {{ form_label(form.email, "Email") }}
            {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.email) }}

            {{ form_label(form.username, "Identifiant") }}
            {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.username) }}

            {{ form_label(form.plainPassword.first, "Mot de passe") }}
            {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.plainPassword.first) }}

            {{ form_label(form.plainPassword.second, "Re-saisissez le mot de passe") }}
            {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'form-control' } }) }}
            {{ form_errors(form.plainPassword.second) }}

            {{ form_rest(form) }}

        <button type="submit">S'enregistrer</button>

        {{ form_end(form) }}

    <p>Vous êtes déjà inscrit ? <a href="{{ path("fos_user_security_login") }}">Cliquez ici</a>.</p>
{% endblock body %}
